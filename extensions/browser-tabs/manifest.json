{
  "manifest_version": 3,
  "name": "ActiveWatcher Tabs",
  "version": "0.1.0",
  "description": "Reports open tab counts to ActiveWatcher.",
  "permissions": ["tabs", "storage", "alarms"],
  "host_permissions": ["http://127.0.0.1:8712/*", "http://localhost:8712/*"],
  "background": { "service_worker": "background.js" },
  "options_ui": { "page": "options.html", "open_in_tab": true },
  "action": { "default_title": "ActiveWatcher Tabs" },
  "browser_specific_settings": {
    "gecko": {
      "id": "activewatcher-tabs@local",
      "strict_min_version": "109.0"
    }
  }
}
